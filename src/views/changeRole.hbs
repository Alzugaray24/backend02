<div class="user-list">
  <h1>Lista de Usuarios</h1>
</div>
<table class="user-table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Correo Electr√≥nico</th>
      <th>Rol</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <td>{{this.firstName}} {{this.lastName}}</td>
        <td>{{this.email}}</td>
        <td>{{this.role}}</td>
        <td>
          <button class="change-role-btn" data-_id="{{this.id}}">Cambiar Rol</button>
          <button class="delete-user-btn" data-_id="{{this.id}}">Borrar Usuario</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<div class="inactive-users-container">
  <button class="inactive-users" title="Eliminar usuarios inactivos">Eliminar
    usuarios inactivos</button>
</div>