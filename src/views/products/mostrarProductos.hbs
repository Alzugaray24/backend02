<div class="container mt-4">
  <div class="row justify-content-center">
    <h1 class="mb-4">Productos</h1>
    {{#each response.payload}}
      <div class="col-md-4 mb-4">
        <div class="card">
          <img src="{{thumbnail}}" class="card-img-top" alt="{{title}}" />
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{description}}</p>
            <p class="card-text">$ {{price}}</p>
            <!-- Botón "Agregar al carrito" -->
              <button id="addToCart" class="btn btn-primary btn-add-to-cart" data-product-id="{{_id}}">Agregar al carrito</button>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <div class="row justify-content-center mt-4">
    <div class="col-md-6">
      <div class="pagination d-flex justify-content-center">
        {{#if response.hasPrevPage}}
          <a href="{{response.prevLink}}" class="btn btn-primary mr-2">&laquo;
            Página anterior</a>
        {{/if}}
        <span class="align-self-center">Página
          {{response.page}}
          de
          {{response.totalPages}}</span>
        {{#if response.hasNextPage}}
          <a href="{{response.nextLink}}" class="btn btn-primary ml-2">Página
            siguiente &raquo;</a>
        {{/if}}
      </div>
    </div>
  </div>
</div>

